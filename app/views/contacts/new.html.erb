<% title "New Contact" %>
<div class="grid_12">
	<div id="contact">
		<h1>Contact</h1>
		<p>if you want to find how i can help your businees, feel free to contact me by email at <%= mail_to @email.value, nil, :replace_at => "_at_", :replace_dot => "_dot_", :class => "email"%> </p>
		<p>or by filling the contact form below</p>
	</div>
</div>
<div class="clear"></div>
<div class="grid_12">
	<div id="contact_form">
		<h3>Send Message By Email</h3>
		<% form_for @contact do |f| %>
		  <%= f.error_messages %>
		  <p>
		    <%= f.label :name %><br />
		    <%= f.text_field :name %>
		  </p>
		  <p>
		    <%= f.label :email %><br />
		    <%= f.text_field :email %>
		  </p>
		  <p>
		    <%= f.label :message %><br />
		    <%= f.text_area :message %>
		  </p>
		  <p><%= f.submit "Submit" %></p>
		<% end %>
	</div>
</div>
<div class="clear"></div>

